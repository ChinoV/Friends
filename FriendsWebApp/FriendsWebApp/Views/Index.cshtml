</head>
<body>
    <div class="container">
        <br>
        <h2>People List</h2>
        <div class="text-center">
            <button type="button" id="CreatePerson" class="btn btn-primary" data-toggle='modal' data-target='#ModadAddEdit'>
                Add person
            </button>
        </div>

        <div id="confirm" class="modal hide fade">
            <div class="modal-body">
                Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-primary" id="delete">Delete</button>
                <button type="button" data-dismiss="modal" class="btn">Cancel</button>
            </div>
        </div>


        <table id="PeopleTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Last Name</th>
                    <th>Options</th>
                </tr>
            </thead>
        </table>
    </div>
    <!--modal de agregar y editar-->
    <div class="modal fade" id="ModadAddEdit" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div id="modalForm" class="modal-content">
                <div class="modal-header text-center">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title w-100 font-weight-bold" id="modalHeaderTitle"></h4>

                </div>
                <div class="modal-body">
                    <input id="UserId" name="UserId" type="hidden" value="0">
                    <div class="md-form mb-5">
                        <i class="fa fa-user  prefix grey-text"></i>
                        <input type="text" id="formName" name="formName" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="formName">Your name</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="fa fa-vcard-o prefix grey-text"></i>
                        <input type="text" id="formLastName" name="formLastName" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="formLastName">Last Name</label>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button class="btn btn-unique">Send <i class="fa fa-paper-plane-o ml-1"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--modal de eliminar-->
    <div>
        <form id="frmDeletePerson" action="" method="POST">
            <input type="hidden" id="UserId" name="Id" value="">
            <input type="hidden" id="opcion" name="opcion" value="Delete">
            <div class="modal fade" id="modalEliminar" tabindex="-1" role="dialog" aria-labelledby="modalEliminarLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="modalEliminarLabel">Delete Person</h4>
                        </div>
                        <div class="modal-body">
                            Has been removed correcty<strong data-name=""></strong>
                        </div>

                        <div class="modal-footer">
                            <button type="button" onclick="" class="btn btn-primary" data-dismiss="modal">Ok</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>