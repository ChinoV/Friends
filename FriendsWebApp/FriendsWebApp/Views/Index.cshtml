            });
        }

        var getDataEdit = function (tbody, table) {
            $(tbody).on("click", "button.editar", function () {
                var data = table.row($(this).parents("tr")).data();
                $(".modal-body #UserId").val(data.Id);
                $(".modal-body #formName").val(data.firstName);
                $(".modal-body #formLastName").val(data.lastName);
            });
            $('#modalHeaderTitle').html('Edit Person');
        }


