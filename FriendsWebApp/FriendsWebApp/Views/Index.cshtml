            });
            $("#EditPerson").click(function () {
                getDataEdit("#PeopleTable tbody", table);
            });
        }


        var getIdToDelete = function (tbody, table) {
            $(tbody).on("click", "button.eliminar", function () {
                var data = table.row($(this).parents("tr")).data();
                var UserId = $("#frmDeletePerson #UserId").val(data.Id);
