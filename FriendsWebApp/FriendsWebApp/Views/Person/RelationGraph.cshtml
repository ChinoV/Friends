
<!DOCTYPE html>
<html>
<head>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <script src="~/argPlugin/arg-graph.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="~/argPlugin/arg-graph.min.css" />

    <script>
        var argGraph;

        $(function () {

            $.urlParam = function (name) {
                var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
                return results[1] || 0;
            }

            argGraph = $('.arg-Graph').ArgGraph();

            $.ajax({
                type: "POST",
                url: "/Person/GetGraph",
                data: JSON.stringify($.urlParam("personId")),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data) {
                        console.log(data);

                        argGraph.importJson(JSON.stringify([
                            {
                                "id": "1",
                                "text": "Ricardo Gamboa",
                                "position": {
                                    "left": "248.859px",
                                    "top": "22px"
                                },
                                "neighbors": [
                                    "3,2,4"
                                ]
                            },
                            {
                                "id": "2",
                                "text": "Lung Chang",
                                "position": {
                                    "left": "416.859px",
                                    "top": "148px"
                                },
                                "neighbors": [
                                    "3,1"
                                ]
                            },
                            {
                                "id": "3",
                                "text": "Alfredo Valverde",
                                "position": {
                                    "left": "80.8594px",
                                    "top": "139px"
                                },
                                "neighbors": ["4,1,2"]
                            },
                            {
                                "id": "4",
                                "text": "Armando Ramirez",
                                "position": {
                                    "left": "169.859px",
                                    "top": "247px"
                                },
                                "neighbors": ["1,3"]
                            }
                        ]));
                    }
                },
                error: function () {
                    console.log("error, ajax couldn't  make the tree")
                }
            });

        });
    </script>
</head>
<body>
    <h1> habla claro</h1>
    <div class='container'>
        <div id="arg-Graph" class="arg-Graph panel">

        </div>
    </div>
</body>
</html>
